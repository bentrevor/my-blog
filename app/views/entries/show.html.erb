<div class="btn-group">
  <% if can? :edit, @entry %>
    <%= link_to "Edit this entry", edit_entry_path(@entry), class: "btn" %>
  <% end %>
  <% if can? :delete, @entry %>
    <%= link_to "Delete this entry", {action: :destroy}, method: :delete, class: "btn" %>
  <% end %>
</div>

<div>
  <%= render "layouts/next-prev-links" %>
  <div class="entry-title">
    <h2><%= @entry.title %></h2>
    <p class="smaller posted-on"> - posted on <%= @entry.created_at.to_date.to_formatted_s :long_ordinal %></p>
  </div>

  <%= markdown @entry.content %>
  <%= render "layouts/next-prev-links" %>

</div>

